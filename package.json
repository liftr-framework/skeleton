{
  "name": "liftr",
  "version": "1.0.0",
  "description": "A project bootstrapped with the liftr-cli",
  "main": "server.js",
  "scripts": {
    "prestart": "tsc --incremental",
    "start": "concurrently --kill-others \"tsc --watch --incremental\" \"nodemon\"",
    "build": "tsc --project tsconfig.json",
    "build:test": "tsc",
    "test": "npm run lint && npm run test:unit",
    "lint": "tslint -p . --fix",
    "test:unit": "nyc mocha",
    "pretest:unit": "npm run build:test",
    "pretest:watch": "tsc --incremental",
    "test:watch": "concurrently --kill-others \"tsc --watch --incremental\" \"mocha --watch\"",
    "test:types": "tscov -p src --details"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "swagger",
    "framework",
    "API"
  ],
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@liftr/core": "^1.1.0",
    "body-parser": "^1.19.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "tsconfig-paths": "^3.10.1"
  },
  "devDependencies": {
    "@liftr/tscov": "^1.4.7",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.6",
    "@types/sinon": "^7.0.11",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "concurrently": "^5.0.0",
    "mocha": "^6.1.2",
    "nodemon": "^1.18.7",
    "nyc": "^14.1.1",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.2.2"
  }
}
